
<div class="item-container" data-id="{{item.id}}" data-content="{{item.content}}">

  <div class="item-content">
    <p>
      {{item.content}}
      <button class="btn btn-default btn-sm item-destroy">Delete</button>
      <button class="btn btn-default btn-sm item-edit">Edit</button>
    </p>
  </div>
  <p id="item-message"></p>
</div>
